#include<bits/stdc++.h>
using namespace std;
#define ll long long

bool check(int n)
{
	if (n == 0)
	{
		return 0;
	}

	return !(n&(n-1));

}
signed main() {
  #ifndef ONLINE_JUDGE
  freopen("input.txt","r",stdin);
  freopen("output.txt","w",stdout);
  #endif
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  cout.tie(NULL);
  int n;
  cin>>n;
  

cout<<check(n);
    return 0;
  
  
  
}
