#include<bits/stdc++.h>
#define ll long long
#define mod 1000000007
#define testcase while(t--)
using namespace std;

int fact(int n)
{
	int ans = 1;
	for (int i = 2; i <= n; ++i)
	{
		ans = ans*i;
	}
	return ans;

}

int32_t main() {
  #ifndef ONLINE_JUDGE
  freopen("input.txt","r",stdin);
  freopen("output.txt","w",stdout);
  #endif
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  cout.tie(NULL);
  

  int n;
  cin>>n;

  int ans = fact(n);
  cout<<ans;
  return 0;
}